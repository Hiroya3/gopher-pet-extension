{
  "name": "gopher-pet",
  "displayName": "gopher-pet",
  "description": "A Gopher pet that walks and runs inside VS/Cursor Code",
  "license": "MIT",
  "repository": "https://github.com/Hiroya3/gopher-pet-extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gopher-pet.startGame",
        "title": "Gopher: Start Game"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "gopherPetView",
          "name": "Gopher Pet"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
